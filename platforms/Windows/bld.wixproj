<Project Sdk="WixToolset.Sdk/4.0.1">
  <PropertyGroup>
    <DefineConstants>
      $(DefineConstants);
      DEVTOOLS_ROOT=$(DEVTOOLS_ROOT);
      TOOLCHAIN_ROOT=$(TOOLCHAIN_ROOT);
      TOOLCHAIN_ROOT_USR_LIB_CLANG=$(TOOLCHAIN_ROOT_USR_LIB_CLANG);
    </DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="WixToolset.Heat" Version="4.0.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="shared.wixproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="bld.wxs" />
  </ItemGroup>

  <ItemGroup>
    <HarvestDirectory Include="$(TOOLCHAIN_ROOT)\usr\lib\clang">
      <ComponentGroupName>ClangResources</ComponentGroupName>
      <DirectoryRefId>_usr_lib_clang</DirectoryRefId>
      <PreprocessorVariable>var.TOOLCHAIN_ROOT_USR_LIB_CLANG</PreprocessorVariable>
      <SuppressCom>true</SuppressCom>
      <SuppressRegistry>true</SuppressRegistry>
      <SuppressRootDirectory>true</SuppressRootDirectory>
    </HarvestDirectory>
  </ItemGroup>
</Project>
